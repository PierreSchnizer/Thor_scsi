message(STATUS "Looking for thor_scsi components: ${thor_scsi_FIND_COMPONENTS}")

foreach(_comp ${thor_scsi_FIND_COMPONENTS})
  if (NOT _comp IN_LIST _supported_components)
    message(STATUS "flame component ${_comp} not in supported components {_supported_components}")
    set(flame_FOUND False)
    set(flame_NOT_FOUND_MESSAGE "Unsupported component: ${_cmp}")
  endif()
  set(_comp_load_name "${CMAKE_CURRENT_LIST_DIR}/thor_scsi${_comp}Targets.cmake")
  message(STATUS "loadling ${_comp_load_name}")
  include("${_comp_load_name}")
endforeach()

message(STATUS "thor_scsi_found ${thor_scsi_FOUND}")
